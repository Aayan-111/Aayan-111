local viewportFrame = Instance.new("ViewportFrame")
viewportFrame.Size = UDim2.new(1, 0, 1, 0)
viewportFrame.BackgroundTransparency = 1

-- Create a new Camera
local camera = Instance.new("Camera")
camera.CameraType = Enum.CameraType.Scriptable
camera.CFrame = CFrame.new(Vector3.new(0, 5, -10), Vector3.new(0, 0, 0))

-- Set the Camera as the ViewportFrame's CurrentCamera
viewportFrame.CurrentCamera = camera

-- Add the ViewportFrame to the game's Workspace
viewportFrame.Parent = game.Workspace

-- Create a Character model (replace this with your own character model)
local character = game.Workspace:WaitForChild("owner.Character")

-- Add the Character model to the ViewportFrame
character.Parent = viewportFrame

-- Adjust the transparency of the character's parts to make them see-through
local function makePartsSeeThrough(part)
    if part:IsA("BasePart") then
        part.Transparency = 0.5 -- Adjust this value as desired
    end
end

-- Call the function to make all parts in the character model see-through
character:GetDescendants():ForEach(makePartsSeeThrough)
